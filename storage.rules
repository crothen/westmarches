rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Detail maps (hex)
    match /detail-maps/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    // Location maps
    match /location-maps/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    // NPC portraits
    match /npc-portraits/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    // Session art
    match /session-art/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    // Character portraits
    match /characters/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    // Terrain textures (admin-generated)
    match /textures/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    // Custom marker icons (admin-uploaded)
    match /icons/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    // Session entry images (generated/uploaded)
    match /session-entries/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    // Organization sigils
    match /org-sigils/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    // Generic generated images (from GenerateView)
    match /generated/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
