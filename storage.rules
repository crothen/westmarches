rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Detail maps (hex)
    match /detail-maps/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    // Location maps
    match /location-maps/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    // NPC portraits
    match /npc-portraits/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    // Session art
    match /session-art/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    // Character portraits
    match /characters/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
