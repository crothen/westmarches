rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    function hasRole(role) {
      let data = getUserData();
      // Support both new `roles` array and legacy `role` string
      return ('roles' in data && role in data.roles) || ('role' in data && data.role == role);
    }
    function isAdmin() {
      return isAuthenticated() && hasRole('admin');
    }
    function isDm() {
      return isAuthenticated() && hasRole('dm');
    }
    function isDmOrAdmin() {
      return isDm() || isAdmin();
    }

    // Users
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if request.auth.uid == userId || isAdmin();
    }

    // Characters
    match /characters/{charId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (resource.data.userId == request.auth.uid || isDmOrAdmin());
    }

    // Campaign Locations (cities, towns, etc.)
    match /locations/{locId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isDmOrAdmin();
    }

    // Location Features (POIs)
    match /features/{featId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isDmOrAdmin();
    }

    // Hex tags
    match /hexTags/{tagId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (resource.data.addedBy == request.auth.uid || isDmOrAdmin());
    }

    // Party inventory
    match /inventory/{itemId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAuthenticated();
    }

    // NPCs â€” any authenticated user can edit
    match /npcs/{npcId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isDmOrAdmin();
    }

    // NPC Notes (privacy filtered client-side)
    match /npcNotes/{noteId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      // Author can edit content; DMs/admins can soft-delete (set deleted=true)
      allow update: if isAuthenticated() && (resource.data.userId == request.auth.uid || isDmOrAdmin());
      allow delete: if isAuthenticated() && (resource.data.userId == request.auth.uid || isDmOrAdmin());
    }

    // Organizations
    match /organizations/{orgId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isDmOrAdmin();
    }

    // Comments
    match /comments/{commentId} {
      allow read: if isAuthenticated() && (!resource.data.isPrivate || isDmOrAdmin() || resource.data.authorId == request.auth.uid);
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (resource.data.authorId == request.auth.uid || isDmOrAdmin());
    }

    // Votes
    match /votes/{voteId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAuthenticated() && request.auth.uid == resource.data.userId;
    }

    // Likes
    match /likes/{likeId} {
      allow read: if isAuthenticated();
      allow create, delete: if isAuthenticated();
    }

    // Sessions
    match /sessions/{sessionId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isDmOrAdmin();
    }

    // Session Entries (timeline)
    match /sessionEntries/{entryId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isDmOrAdmin();
    }

    // Session Notes (privacy filtered client-side)
    match /sessionNotes/{noteId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (resource.data.userId == request.auth.uid || isDmOrAdmin());
    }

    // Missions
    match /missions/{missionId} {
      allow read: if isAuthenticated();
      allow create, delete: if isDmOrAdmin();
      // Players can update votes; DMs/admins can update anything
      allow update: if isAuthenticated();
    }

    // Scheduled Sessions
    match /scheduledSessions/{sessionId} {
      allow read: if isAuthenticated();
      allow create, delete: if isDmOrAdmin();
      allow update: if isAuthenticated();
    }

    // Hex Notes
    match /hexNotes/{noteId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (resource.data.userId == request.auth.uid || isDmOrAdmin());
      allow delete: if isAuthenticated() && (resource.data.userId == request.auth.uid || isDmOrAdmin());
    }

    // Hex Markers (clue, battle, danger, etc.)
    match /markers/{markerId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (resource.data.createdBy == request.auth.uid || isDmOrAdmin());
    }

    // Map data
    match /maps/{mapId} {
      allow read: if isAuthenticated();
      allow write: if isDmOrAdmin();
    }

    // Map Paths (roads, rivers)
    match /mapPaths/{pathId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isDmOrAdmin();
    }

    // Config (terrain, tags)
    match /config/{configId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}
